<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weinrechnerlel.Ergebnis_Rechnung_Aust"
             Title="Verschnitt - Austausch"
             >
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>

            <Label Text="max. mögliche Menge an Verschnittwein" TextColor="Black" ></Label>
            <Label  x:Name="max_vwe" TextColor="Black" ></Label>
            <Label Text="max. mögliche Menge an bezeichnungsungleicher SR" TextColor="Black" ></Label>
            <Label  x:Name="max_sr1e" TextColor="Black" ></Label>

                <Label Text="Hier können Sie die Verschnittweinmenge zugunsten der Süßreserve reduzieren." TextColor="DarkRed" ></Label>
                <Label Text="Wieviel Verschnittwein möchten Sie verwenden?" TextColor="Black"></Label>
                
                <Entry x:Name="verw_vw" Placeholder="Menge in Liter" TextColor="Black" Keyboard="Numeric" TextChanged="Verw_vw_TextChanged"></Entry>
                    <Label Text="max. mögliche Menge an bezeichnungsungleicher SR" TextColor="Black" ></Label>
            <Label  x:Name="max_sr2e" TextColor="Black" ></Label>
            
            
       
        </StackLayout>
    </ScrollView>
    </ContentPage.Content>
</ContentPage>